@model IEnumerable<WebSiteBanHang.Models.Category>
@{
    ViewBag.Title = "search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="card  mt-4 ml-2 mr-2">
        <div class="card-header">
            <h3 class="card-title">Search</h3>
        </div>
        <div class="card-body form-group">
            @using (Html.BeginForm())
            {
                <div class="row align-items-center">
                    <label class="col-2">Name:</label>
                    <div class="col-sm-10 mb-3">
                        <input name="searchNameCategory" value="@ViewBag.search" type="text" class="form-control" style="max-width: 100%" />
                    </div>
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
    <div class="card ">
        <div class="card-header">
            <h3 class="card-title">List Category</h3>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-head-fixed text-nowrap">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("name")
                        </th>
                        <th>
                            @Html.Label("Edit")
                        </th>
                        <th>
                            @Html.Label("Delete")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nameCategory)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.idCategory }, new { @class = "btn btn-info  btn-block btn-sm " })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete2", new { id = item.idCategory }, new { @OnClick = "remove()", @class = "btn btn-danger btn-block btn-sm " })
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>
                            @Html.DisplayName("name")
                        </th>
                        <th>
                            @Html.Label("Edit")
                        </th>
                        <th>
                            @Html.Label("Delete")
                        </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>


